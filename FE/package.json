{
  "name": "ecommerce-frontend",
  "version": "1.0.0",
  "description": "E-commerce frontend monorepo with React web and React Native mobile apps",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "web": "cd packages/web && npm start",
    "mobile": "cd packages/mobile && npm start",
    "build:web": "cd packages/web && npm run build",
    "build:mobile": "cd packages/mobile && npm run build",
    "install:all": "npm install && npm run install:web && npm run install:mobile",
    "install:web": "cd packages/web && npm install",
    "install:mobile": "cd packages/mobile && npm install",
    "lint": "npm run lint:web && npm run lint:mobile",
    "lint:web": "cd packages/web && npm run lint",
    "lint:mobile": "cd packages/mobile && npm run lint",
    "test": "npm run test:web && npm run test:mobile",
    "test:web": "cd packages/web && npm test",
    "test:mobile": "cd packages/mobile && npm test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
